# Google Gemini API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ChromaDB Configuration
# Directory path for ChromaDB persistent storage
CHROMA_DB_PATH=./databases/chroma_moderation_db

# ============================================================================
# ML Model Configuration
# ============================================================================

# Enable/disable ML-based toxicity detection (HateBERT, DistilBERT, etc.)
# Set to "true" to use transformer models, "false" for keyword-based only
# Default: false (keyword-based for faster startup and lower resource usage)
USE_ML_MODELS=false

# Primary ML model for toxicity detection
# Options: distilbert_toxic, hatebert, toxic_bert, roberta_hate
# Default: distilbert_toxic (fastest and most reliable)
ML_PRIMARY_MODEL=distilbert_toxic

# Enable ensemble mode (combines predictions from multiple models)
# Set to "true" for higher accuracy, "false" for faster inference
# Default: false
ML_USE_ENSEMBLE=false

# Preload ML models at startup (recommended for production)
# Set to "true" to load models when app starts, "false" for lazy loading
# Default: true (if USE_ML_MODELS is true)
ML_PRELOAD_MODELS=true

# Device for ML inference
# Options: auto, cpu, cuda, mps (Apple Silicon)
# Default: auto (automatically detects best available)
ML_DEVICE=auto

# Directory to cache downloaded models
# Default: ./models_cache
ML_MODELS_CACHE_DIR=./models_cache

# ============================================================================
# Fast Mode Configuration
# ============================================================================

# Enable fast mode for comments and short content
# When enabled, short comments (<200 chars) use a simplified single-LLM pipeline
# instead of the full multi-agent workflow for faster processing
# Set to "true" to enable fast mode, "false" for full pipeline on all content
# Default: true
ENABLE_FAST_MODE=true

# Maximum content length (in characters) to use fast mode
# Content longer than this will always use the full multi-agent pipeline
# Default: 200 characters
FAST_MODE_MAX_LENGTH=200

# Content types eligible for fast mode (comma-separated)
# Options: story_comment, post, story, message
# Default: story_comment (only comments use fast mode)
FAST_MODE_CONTENT_TYPES=story_comment
